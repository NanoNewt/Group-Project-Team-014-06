<%- include ('../partials/head') %>
<%- include ('../partials/menu') %>

<main>
    <% let classes = ['c1', 'c2', 'c3', 'c4'] %>
    <% for(var i = 0; i < classes.length; i++) { %>
        <% if (i % 3 === 0) { %>
          <div class="row">
        <% } %>
          <div class="col-sm d-flex">
            <div class="card" style="width: 20rem;">
                <div class="card-body">
                   <h4 class="card-title">Class: <%= classes[i] %></h4>
                    <p class="card-text">Notes Name: <%= classes[i].author %><br>
                        <br>
                    </p>
                </div>
            </div>
          </div>
        <% if (i+1 % 3 === 0) { %>
          </div>
        <% } %>
      <% } %>
</main>

<style>
    .card{
        margin-top: 5px;
        margin-bottom: 5px;
    }
</style>

