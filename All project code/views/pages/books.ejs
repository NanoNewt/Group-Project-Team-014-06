<%- include ('../partials/head') %>
<%- include ('../partials/menu') %>

<main>
    <% let books = ['b1', 'b2', 'b3', 'b4'] %>
    <% for(var i = 0; i < books.length; i++) { %>
        <% if (i % 3 === 0) { %>
          <div class="row">
        <% } %>
          <div class="col-sm d-flex">
            <div class="card" style="width: 20rem;">
                <div class="card-body">
                   <h4 class="card-title">Book: <%= books[i] %></h4>
                    <p class="card-text">Author: <%= books[i].author %><br>
                        Genre: <%= books[i].genre %><br>
                    </p>
                </div>
            </div>
          </div>
        <% if (i+1 % 3 === 0) { %>
          </div>
        <% } %>
      <% } %>
</main>

<style>
    .card{
        margin-top: 5px;
        margin-bottom: 5px;
    }
</style>

